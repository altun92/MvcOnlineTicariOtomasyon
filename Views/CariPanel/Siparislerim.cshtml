@model List<MvcOnlineTicariOtomasyon.Models.Siniflar.SatisHareket>

@{
    ViewBag.Title = "Siparislerim";
    Layout = "~/Views/Shared/_CariLayout.cshtml";
}

<h2>Sipariş Geçmişim</h2>
<br />


<table class="table table-bordered">
    <thead>
        <tr>
            <th>Ürün Adı</th>
            <th>Fiyat</th>
            <th>Tarih</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Urun.UrunAd</td>
                <td>@item.Urun.SatisFiyat</td>
                <td>@item.Tarih.ToShortDateString()</td>
            </tr>
        }
    </tbody>
</table>