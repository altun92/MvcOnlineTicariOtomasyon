@model List<MvcOnlineTicariOtomasyon.Models.Siniflar.Personel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<h1 class="mt-4">Personeller</h1>
<br />
<div>
    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
        <a href="/Personel/PersonelEkle" class="btn btn-primary">Yeni Personel</a>
        <br />
        <br />

        <thead>
            <tr>
                <th>Sıra No</th>
                <th>Görsel</th>
                <th>Personel Adı</th>
                <th>Personel Soyadı</th>
                <th>Ünvanı</th>
                <th>Telefonu</th>
                <th>Adresi</th>
                <th>Departmanı</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                count++;
                <tr>
                    <td>@count</td>
                    <td><img src="@item.PersonelGorsel" style="width:100px; height:auto" /></td>
                    <td>@item.PersonelAd</td>
                    <td>@item.PersonelSoyad</td>
                    <td>@item.PersonelUnvan</td>
                    <td>@item.PersonelTel</td>
                    <td>@item.PersonelAdres</td>
                    <td>@item.Departman.DepartmanAd</td>
                    <td>
                        <a href="/Personel/PersonelGetir/@item.PersonelId" class="btn btn-warning">Düzenle</a>
                        <a href="/Personel/PersonelSatislar/@item.PersonelId" class="btn btn-danger">Detaylar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>