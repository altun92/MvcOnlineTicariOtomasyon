@model MvcOnlineTicariOtomasyon.Models.Siniflar.Personel
@{
    ViewBag.Title = "PersonelEkle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1 class="mt-4">Personel Ekleme Sayfası</h1>
<br />
<br />

<div class="container">
    <!--Using teki enctype ile personel eklerken seçilen resmi klasöre atıyoruz.-->
    @using (Html.BeginForm("PersonelEkle", "Personel", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <form class="form-group" method="post">
            @Html.LabelFor(x => x.PersonelAd)
            @Html.TextBoxFor(x => x.PersonelAd, new { @class = "form-control", @required = "required" })
            <br />

            @Html.LabelFor(x => x.PersonelSoyad)
            @Html.TextBoxFor(x => x.PersonelSoyad, new { @class = "form-control", @required = "required" })
            <br />

            @Html.LabelFor(x => x.PersonelUnvan)
            @Html.TextBoxFor(x => x.PersonelUnvan, new { @class = "form-control", @required = "required" })
            <br />

            @Html.LabelFor(x => x.PersonelTel)
            @Html.TextBoxFor(x => x.PersonelTel, new { @class = "form-control", @required = "required" })
            <br />

            @Html.LabelFor(x => x.PersonelAdres)
            @Html.TextBoxFor(x => x.PersonelAdres, new { @class = "form-control", @required = "required" })
            <br />

            @Html.Label("Departman Adı")
            @Html.DropDownListFor(x => x.DepartmanId, (List<SelectListItem>)ViewBag.dpt1, new { @class = "form-control", @required = "required" })
            <br />

            @Html.LabelFor(x => x.PersonelGorsel)
            <br />
            @*Html.TextBoxFor(x => x.PersonelGorsel, new { @class = "form-control", @required = "required" })*@
            <input type="file" name="PersonelGorsel" />
            <br />
            <br />
            <button class="btn btn-primary" style="margin-right:20px">Personel Ekle</button>
            <a href="/Personel/Index" class="btn btn-primary">Personel Sayfasına Geri Dön</a>
        </form>
    }

</div>
