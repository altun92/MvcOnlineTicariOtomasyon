@model List<MvcOnlineTicariOtomasyon.Models.Siniflar.Urun>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<h1 class="mt-4">Ürünler</h1>
<br />

<div class="container-fluid">
    @using (Html.BeginForm("Index", "Urun", FormMethod.Get))
    {
        <p>
            Ürün Adı: @Html.TextBox("p")
            <input type="submit" value="Ara" />
        </p>
    }
    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
        <a href="/Urun/UrunEkle" class="btn btn-primary" style="margin-right:20px">Yeni Ürün</a>
        <a href="/Urun/UrunYazdir" class="btn btn-primary">Ürün Listesini Yazdır</a>
        <br />
        <br />

        <thead>
            <tr>
                <th>Sıra No</th>
                <th>Ürün Görseli</th>
                <th>Ürün Adı</th>
                <th>Marka</th>
                <th>Stok Adedi</th>
                <th>Alış Fiyatı</th>
                <th>Satış Fiyatı</th>
                <th>Durum</th>
                <th>Ürün Kategori</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                count++;
                <tr>
                    <td>@count</td>
                    <td><img src="@item.UrunGorsel" width="100px" height="auto" /></td>
                    <td>@item.UrunAd</td>
                    <td>@item.Marka</td>
                    <td>@item.Stok</td>
                    <td>@item.AlisFiyat TL</td>
                    <td>@item.SatisFiyat TL</td>
                    <td>@item.Durum</td>
                    <td>@item.Kategori.KategoriAd</td>
                    <td>
                        <a href="/Urun/UrunGetir/@item.UrunId" class="btn btn-warning">Düzenle</a>
                        <a href="/Urun/UrunSil/@item.UrunId" class="btn btn-danger">Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>